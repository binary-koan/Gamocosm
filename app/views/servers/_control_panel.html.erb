<div class="control-panel">
	<% if @demo.nil? %>
		<span class="info-box btn-group">
			<h4 class="btn btn-default">Physical Server: <strong><%= render_server_status(@server) %></strong></h4>
			<% if @server.start?.nil? %>
				<%= link_to start_server_path(@server), class: "btn btn-success" do %>
					<span class="fa fa-power-off"></span> Turn on
				<% end %>
			<% end %>
			<% if @server.stop?.nil? %>
				<%= link_to 'Turn off', stop_server_path(@server), class: "btn btn-danger" %>
			<% end %>
			<% if @server.reboot?.nil? %>
				<%= link_to 'Reboot', reboot_server_path(@server), class: "btn btn-info" %>
			<% end %>
		</span>

		<span class="info-box btn-group">
			<h4 class="btn btn-default">Minecraft: <strong><%= @server.minecraft.resume? ? 'Inactive' : 'Running' %></strong></h4>

			<% if @server.minecraft.pause?.nil? %>
				<%= link_to 'Stop', pause_server_path(@server), class: "btn btn-info btn-block" %>
			<% else %>
				<%= link_to 'Start', resume_server_path(@server), class: "btn btn-success #{@server.minecraft.resume?.nil? ? '' : 'disabled'}" %>
			<% end %>
		</span>

		<div class="pull-right">
			<span class="info-box btn-group">
				<%= link_to 'Backup remotely', backup_server_path(@server), class: "btn btn-success #{!@server.minecraft.backup?.nil? ? 'disabled' : ''}" %>
				<%= link_to 'Download world', download_server_path(@server), class: "btn btn-info #{!@server.minecraft.download?.nil? ? 'disabled' : ''}" %>
			</span>

			<% if @server.owner?(current_user) %>
				<span class="info-box">
					<%= link_to 'Delete', server_path(@server), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this server forever? (A really long time!)' } %>
				</span>
			<% end %>
		</div>
	<% else %>
		<%#TODO demo mode %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Control Panel</h3>
			</div>
			<div class="panel-body">
				<h4 class="text-center">Physical Server</h4>
				<a class="btn btn-success btn-block disabled">Start</a>
				<a class="btn btn-danger btn-block">Stop</a>
				<a class="btn btn-info btn-block">Reboot</a>
				<hr>
				<h4 class="text-center">Minecraft</h4>
				<a class="btn btn-success btn-block disabled">Resume</a>
				<a class="btn btn-info btn-block">Pause</a>
				<hr>
				<a class="btn btn-success btn-block disabled">Backup Remotely</a>
				<a class="btn btn-info btn-block disabled">Download world</a>
				<hr>
				<a class="btn btn-danger btn-block">Delete</a>
			</div>
		</div>
	<% end %>
</div>
